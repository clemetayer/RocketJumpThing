[gd_resource type="Shader" format=2]

[resource]
code = "shader_type spatial;

//---- Other parameters ----
uniform vec4 color_1 : hint_color = vec4(1.0,1.0,1.0,1.0);
uniform vec4 color_2 : hint_color = vec4(0.0,0.0,0.0,1.0);
uniform float speed = 1.0;
uniform float max_speed = 300.0;
uniform float intensity = 1.0;

void fragment(){
	float val = sin(TIME * speed)/2.0 + 0.5;
	ALBEDO = mix(color_1,color_2,val).rgb;
	EMISSION = ALBEDO * intensity;
}

void light(){
	DIFFUSE_LIGHT += ALBEDO * intensity;
}"
