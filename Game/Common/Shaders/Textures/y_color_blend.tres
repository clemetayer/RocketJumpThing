[gd_resource type="Shader" format=2]

[resource]
code = "shader_type spatial;

const float emission = 1.5;
const float epsilon = 0.2;

uniform vec4 color_1 : hint_color;
uniform vec4 color_2 : hint_color;
uniform float cursor : hint_range(0.0, 1.0);

vec3 smooth_limit_color(vec2 uv){
	return mix(color_1,color_2,smoothstep(cursor-epsilon,cursor+epsilon,uv.y)).rgb;
}

void fragment(){
	ALBEDO = smooth_limit_color(UV);
	EMISSION = ALBEDO * emission;
}"
