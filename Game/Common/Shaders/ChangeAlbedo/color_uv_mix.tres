[gd_resource type="Shader" format=2]

[resource]
code = "shader_type spatial;

//---- Other parameters ----
uniform float intensity = 2.0;
uniform vec4 col_1 : hint_color;
uniform vec4 col_2 : hint_color;

void fragment(){
	vec4 x_col = mix(col_1,col_2,(cos(UV.x + TIME)/2.0) + 0.5);
	vec4 y_col = mix(col_2,col_1,(sin(UV.y + TIME / 2.0)/2.0) + 0.5);
	ALBEDO = mix(x_col,y_col,0.5).rgb;
	EMISSION = ALBEDO * intensity;
}"
